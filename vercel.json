{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/assets/:path*",
      "destination": "/assets/:path*"
    },
    {
      "source": "/login",
      "destination": "/index.html"
    },
    {
      "source": "/dashboard",
      "destination": "/index.html"
    },
    {
      "source": "/details/:slug",
      "destination": "/index.html"
    },
    {
      "source": "/password",
      "destination": "/index.html"
    },
    {
      "source": "/p/:slug",
      "destination": "/index.html"
    },
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/:slug((?!api/|assets/|favicon.ico|vite.svg).*)",
      "destination": "/api/redirect.js?slug=:slug"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist"
}